<!--pages/changepassword/changepassword.wxml-->
<view class='change'>
	<view class='change-top'>
		<input class='change-input' placeholder='请输入原密码' type='password' value='{{oldPassword}}' bindinput='onOldChange'></input>
	</view>
	<view class='change-top'>
		<input class='change-input' placeholder='请输入新密码' type='password' value='{{newPassword}}' bindinput='onNewChange'></input>
	</view>
	<view class='change-bottom'>
		<button bindtap='submitFunc'>确定</button>
	</view>
</view>
