/* pages/my/myassets/giftcard/giftcard.wxss */
.gift-scroll {
	height: 100vh;
	box-sizing: border-box;
}
.top {
	/* margin-bottom: 30rpx; */
	box-sizing: border-box;
	background-color: #fff;
	position: relative;
	padding: 30rpx;
}
.top:last-child {
	margin-bottom: 100rpx !important;
}
.top-bg {
	position: absolute;
	left: 0;
	top: -35px;
	width: 100vw;
	height: 100%;
}
.top-main {
	width: 100%;
	height: 344rpx;
	border-radius: 4rpx;
	z-index: 1;
	position: relative;
}

.top-main-bg {
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	z-index: -1;
}
.top-main-box {
	width: 100%;
	height: 100%;
	padding: 40rpx;
	box-sizing: border-box;
	box-shadow: 1rpx 1rpx 10rpx #d5d5d5;
	border-radius: 10rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.top-main-first {
	display: flex;
	flex-direction: row;
	align-items: center;
	margin-bottom: 60rpx;
}
.top-main-first-title {
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	background-color: #e5e5e5;
	font-size: 32rpx;
	line-height: 100rpx;
	text-align: center;
	margin-right: 32rpx;
}
.top-main-first-name {
	flex-grow: 1;
	font-size: 30rpx;
	color: #333;
	text-align: right;
}
.top-main-first-code {
	width: 114rpx;
	height: 114rpx;
	box-sizing: border-box;
	background-color: #fff;
}
.top-main-second {
	font-size: 28rpx;
	color: #333;
	margin-bottom: 40rpx;
}
.top-main-second:last-child {
	margin-bottom: 0;
}
/* .gift {
	margin-top: 30rpx;
} */
.gift-bottom {
	position: fixed;
	left: 0;
	bottom: 0;
	display: flex;
	flex-direction: row;
	width: 100%;
	height: 98rpx;
	align-items: center;
	text-align: center;
	z-index: 10;
}
.gift-bottom-left {
	width: 50%;
	height: 100%;
	border-radius: 0;
	border: none !important;
	background-color: #FFF4CD;
	display: flex;
	align-items: center;
	justify-content: center;
	color: #f5c243;
	font-size: 26rpx;
}
.gift-bottom-left:active {
	opacity: .8;
}
.gift-bottom-right {
	width: 50%;
	height: 100%;
	border-radius: 0;
	border: none !important;
	background-color: #f5c243;
	display: flex;
	align-items: center;
	justify-content: center;
	color: #fff;
	font-size: 26rpx;
}
.gift-bottom-right:active {
	opacity: .8;
}
