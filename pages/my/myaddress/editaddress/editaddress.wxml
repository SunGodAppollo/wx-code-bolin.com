<view style="">
<view style="padding:10px 30px; border-bottom: 1px solid #ddd;">
<label >收货人:</label>

<input bindinput='nameFunc' value="{{address.name}}" class="fr"  placeholder="" />
</view>

<view style="padding:10px 30px; border-bottom: 1px solid #ddd;">
<label >手机号码:</label>

<input bindinput='phoneFunc' value="{{address.phone}}" class="fr"  placeholder="" />
</view>

<view style="padding:10px 30px; border-bottom: 1px solid #ddd;">
<label >所在地区:</label>

<input  bindinput='provincialCityFunc'  value="{{address.provincialCity}}" class="fr"  placeholder="" />
</view>

<view style="padding:10px 30px; border-bottom: 1px solid #ddd;">
<label >详细地址:</label>

<input  bindinput='detailedPathFunc'  value="{{address.detailedPath}}" class="fr"  placeholder="如街道门牌号等" />

</view>

</view>

<button  bindtap="toeditaddress" class="saveBtn btn"  style="background-color:#f5c243;color:#fff"> 保存 </button>
