/* 搜索框组件 */
@import "components/search/search.wxss";

.col-f {
  color: #fff;
}
.ts-3 {
  -moz-transition: all 0.3s;
  -o-transition: all 0.3s;
  transition: all 0.3s;
}
.dis-flex {
  display: flex !important;
  flex-wrap: wrap;
}
.diy-search-box {
  width: 100%;
  background:#f5c243;
  padding:10px 5rpx;
}

.tab{
display: inline-block;
padding: 10px 0px;
font-size:14px;
float: left;
width: 110rpx;
text-align: center;
margin: 0rpx 20rpx;
height: 90rpx;
z-index: 1000;
}
.topTabSwiper{
padding: 10px 0px;
zoom: 1;
background-color: #fff;
height: 90rpx;
}
.topTabSwiper:after{content: ""; clear: both;display: block;}
.tabBorer{border-bottom: 2px solid #f5c243; color: #f5c243;}
.swiper{background-color: #f5f5f5;width: 100%;/*padding: 100rpx;*/}
.swiper_con{text-align: center; width: 100%; height: 100%;padding-top: 15rpx;}
.goods-item{float: left;width: 340rpx;height: 456rpx;box-sizing: border-box;margin-top: 25rpx;margin-left:22rpx;background-color: #fff;border-radius: 6rpx;}
.goods-title{font-size:14px;color: #333;margin: 25rpx 16rpx;text-align: left;overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;}
.goods-info-left{font-size:12px;float: left; color: red}
.goods-info-right{font-size:12px;color: #666;float: right;}
.goods-info{margin: 0 16rpx;}
