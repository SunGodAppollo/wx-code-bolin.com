/* pages/chat/chat.wxss */
.chat {
	display: flex;
	flex-direction: column;
}
.chat-bottom {
	display: flex;
	flex-direction: row;
	align-items: center;
	width: 100vw;
	height: 98rpx;
	background-color: #fff;
	padding: 0 30rpx;
	box-sizing: border-box;
	position: fixed;
	left: 0;
	bottom: 0;
}
.chat-bottom-img {
	width: 50rpx;
	height: 50rpx;
}
.chat-bottom-center {
	flex-grow: 1;
	margin: 0 28rpx;
	height: 70rpx;
	border-radius: 70rpx;
	background-color: #f2f0f1;
	border: 1rpx solid #edebec;
	padding: 0 10rpx 0 27rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
}
.chat-bottom-input {
	font-size: 26rpx;
	color: #333;
	flex-grow: 1;
}
.chat-bottom-input.input-placeholder {
	color: #999;
}
.chat-box {
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 0 30rpx;
	margin-bottom: 130rpx;
}
.chat-time {
	width: 100rpx;
	height: 42rpx;
	border-radius: 42rpx;
	background-color: #d9d9d9;
	color: #fff;
	font-size: 22rpx;
	line-height: 42rpx;
	text-align: center;
	margin: 20rpx 0 30rpx;
}
.chat-right {
	display: flex;
	flex-direction: row;
	align-self: flex-end;
	width: 100%;
	box-sizing: border-box;
	padding-left: 90rpx;
	justify-content: flex-end;
	margin-bottom: 30rpx;
}
.chat-right-head {
	width: 70rpx;
	height: 70rpx;
	border-radius: 6rpx;
}
.chat-right-icon {
	width: 0rpx;
	height: 0rpx;
	margin-top: 25rpx;
	border: 10rpx solid transparent;
	border-left-color: #65A6FF;
}
.chat-right-message {
	background-color: #65A6FF;
	border-radius: 6rpx;
	padding: 10rpx 20rpx;
	box-sizing: border-box;
	color: #fff;
	font-size: 26rpx;
	line-height: 50rpx;
}
.chat-left {
	display: flex;
	justify-content: flex-start;
	flex-direction: row;
	width: 100%;
	padding-right: 90rpx;
	box-sizing: border-box;
	margin-bottom: 30rpx;
}
.chat-left-icon {
	width: 0rpx;
	height: 0rpx;
	margin-top: 25rpx;
	border: 10rpx solid transparent;
	border-right-color: #fff;
}
.chat-left-message {
	background-color: #fff;
	border-radius: 6rpx;
	padding: 10rpx 20rpx;
	box-sizing: border-box;
	color: #333;
	font-size: 26rpx;
	line-height: 50rpx;
}